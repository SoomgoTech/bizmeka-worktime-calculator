{
  "name": "비즈메카 근무시간계산기",
  "background": {
    "page": "background.html"
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": "icon-34.png"
  },
  "icons": {
    "128": "icon-128.png"
  },
  "permissions" : [
    "declarativeContent",
    "activeTab",
    "tabs",
    "http://*/*",
    "https://*/*",
    "background",
    "contentSettings",
    "debugger",
    "notifications",
    "pageCapture",
    "topSites",
    "webNavigation",
    "webRequest",
    "webRequestBlocking"
  ],
  "web_accessible_resources": [
    "calculator.bundle.js"
  ],
  "content_scripts": [{
    "matches": ["https://ezhuman.bizmeka.com/product/*"],
    "js": ["contentScript.bundle.js"],
    "run_at": "document_idle"
  }],
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
